<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" application="index.xml">
    <menu id="farming">
        <prompt xml:lang="fr-fr">
            <audio src="audio/fr-farming.wav"/>
        </prompt>
        <choice dtmf="1" next="#cultivating"></choice>
        <choice dtmf="2" next="#planting"></choice>
        <choice dtmf="3" next="#harvesting"></choice>
        <choice dtmf="4" next="fr/menu.xml"></choice>
        <choice dtmf="9" next="language.xml"></choice>
        <!-- repeat the menu for no match or no input -->
        <noinput>
            <prompt xml:lang="fr-fr">
                <audio src="audio/fr-invalid.wav"/>
            </prompt>
            <reprompt />
        </noinput>
        <nomatch>
            <prompt xml:lang="fr-fr">
                <audio src="audio/fr-invalid.wav"/>
            </prompt>
            <reprompt />
        </nomatch>
    </menu>

    <form id="cultivating">
        <block>
            <prompt xml:lang="fr-fr">
                <audio src="audio/fr-cultivating.wav"/>
            </prompt>
            <goto next="#farming" />
        </block>
    </form>

    <form id="planting">
        <block>
            <prompt xml:lang="fr-fr">
                <audio src="audio/fr-planting.wav"/>
            </prompt>
            <goto next="#farming" />
        </block>
    </form>

    <form id="harvesting">
        <block>
            <prompt xml:lang="fr-fr">
                <audio src="audio/fr-harvesting.wav"/>
            </prompt>
            <goto next="#farming" />
        </block>
    </form>
</vxml>
