<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1">
    <menu id="farming">
        <prompt xml:lang="en-us">
            <audio src="en/audio/farming.wav"/>
        </prompt>
        <choice next="#cultivating"></choice>
        <choice next="#planting"></choice>
        <choice next="#harvesting"></choice>
        <choice next="#english-menu"></choice>
        <choice dtmf="9" next="#language"></choice>
        <!-- repeat the menu for no match or no input -->
        <noinput>
            <prompt xml:lang="en-us">
                <audio src="en/audio/invalid.wav"/>
            </prompt>
            <reprompt />
        </noinput>
        <nomatch>
            <prompt xml:lang="en-us">
                <audio src="en/audio/invalid.wav"/>
            </prompt>
            <reprompt />
        </nomatch>
    </menu>

    <form id="cultivating">
        <block>
            <prompt xml:lang="en-us">
                <audio src="en/audio/farming/cultivating.wav"/>
            </prompt>
            <goto next="#farming" />
        </block>
    </form>

    <form id="planting">
        <block>
            <prompt xml:lang="en-us">
                <audio src="en/audio/farming/planting.wav"/>
            </prompt>
            <goto next="#farming" />
        </block>
    </form>

    <form id="harvesting">
        <block>
            <prompt xml:lang="en-us">
                <audio src="en/audio/farming/harvesting.wav"/>
            </prompt>
            <goto next="#farming" />
        </block>
    </form>
</vxml>
